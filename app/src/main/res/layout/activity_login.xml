<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green"
    tools:context=".Database.Login">



<LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/dialog_login_title"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="@string/app_name"
            android:textSize="60sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/core_colors_platinum_white"
            android:layout_marginTop="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_login_welcome_desc"
            android:text="Silahkan login terlebih dahulu..."
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"

            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/core_colors_platinum_white"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_login_title"

            />

        <EditText
            android:id="@+id/etUsername"

            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:hint="Username"
            android:textColorHint="@color/core_colors_platinum_white"
            android:maxLines="1"

            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/core_colors_platinum_white"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_desc"
            android:backgroundTint="@android:color/transparent"
            android:autofillHints=""
            android:inputType="text" />

        <View
            android:layout_width="340dp"
            android:layout_height="3dp"
            android:background="@drawable/line_shape"
            android:backgroundTint="@color/core_colors_platinum_white"
            app:layout_constraintTop_toBottomOf="@id/etUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/etPassword"

            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="@color/core_colors_platinum_white"
            android:maxLines="1"

            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/core_colors_platinum_white"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_auth_username"
            android:backgroundTint="@android:color/transparent"
            android:autofillHints=""
            android:layout_gravity="center"
            />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            android:text="Login"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            android:text="Register"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>